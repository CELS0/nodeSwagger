{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação de produtos",
        "description": "Essa aplicação tem como objetivo a manipulação de produtos",
        "termsOfService": "http://localhost:3000/terms",
        "contact": {
            "email": "swagger@gmail.com"
        }
    },
    "version": "1.0.0",
    "servers": [
        {
            "url": "http://localhost:3000/v1",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/products": {
            "post": {
                "sumary": "Cadastro de produtos",
                "description": "Essa rota será responsável na criação de um novo produto",
                "tags": ["Products"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "aplication/json": {
                            "schema": {
                                "$ref": "#/components/shemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "name": "Mouse USB",
                                        "description": "Produdo com ótima qualidade",
                                        "price": 24.20
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Product already exists"
                    },
                    "200": {
                        "description": "Ok",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "Object",
                                    "$ref": "#/components/shemas/Product"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "shemas": {
            "Product": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes":{
            "bearerAuth":{
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}